  <script>
    let charts = {};
    function destroyChart(id) { if (charts[id]) { charts[id].destroy(); charts[id] = null; } }

    function switchTab(tabId) {
      window.scrollTo({ top: 0, behavior: 'smooth' });
      document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
      document.querySelectorAll('.tab').forEach(t => { t.classList.remove('active','bg-white','border-gray-200'); t.classList.add('bg-transparent','border-transparent'); });
      document.getElementById(tabId).classList.add('active');
      const activeBtn = Array.from(document.querySelectorAll('.tab')).find(btn => btn.getAttribute('onclick').includes(tabId));
      if(activeBtn) { activeBtn.classList.add('active','bg-white','border-gray-200'); activeBtn.classList.remove('bg-transparent','border-transparent'); }
      
      const getCtx = (id) => { const el = document.getElementById(id); return el ? el.getContext('2d') : null; };

      if (tabId === 'global') initGlobalCharts();
      if (tabId === 'usa') initUSACharts();
    }

    function initGlobalCharts() {
        const ctxGlobal = document.getElementById('globalGrowthChart');
        const ctxTrend = document.getElementById('trendChart');

        if (ctxGlobal) {
            destroyChart('globalGrowthChart');
            const years = [2024, 2025, 2026, 2027, 2028, 2029, 2030];
            const generateCAGRData = (start, cagr, yearsCount) => {
                const data = [];
                for(let i = 0; i < yearsCount; i++) {
                const val = start * Math.pow(1 + cagr/100, i);
                data.push(val.toFixed(2));
                }
                return data;
            };
            const globalData = generateCAGRData(103.94, 6.4, 7);
            const usaData = generateCAGRData(18.21, 5.8, 7);
            const europeData = generateCAGRData(20.91, 6.8, 7);
            const chinaData = generateCAGRData(12.30, 6.3, 7);
            const japanData = generateCAGRData(4.69, 5.7, 7);
            const koreaData = generateCAGRData(3.78, 8.4, 7);

            charts['globalGrowthChart'] = new Chart(ctxGlobal.getContext('2d'), { type: 'line', data: { labels: years, datasets: [ 
                { label: 'Global', data: globalData, borderColor: '#1e40af', borderWidth: 3 },
                { label: 'Europe', data: europeData, borderColor: '#059669', borderWidth: 2 },
                { label: 'USA', data: usaData, borderColor: '#2563eb', borderWidth: 2 },
                { label: 'China', data: chinaData, borderColor: '#dc2626', borderWidth: 2 },
                { label: 'Japan', data: japanData, borderColor: '#8b5cf6', borderWidth: 2 },
                { label: 'Korea', data: koreaData, borderColor: '#db2777', borderDash: [5,5], borderWidth: 2 }
            ]}, options: { responsive: true, maintainAspectRatio: false, 
                scales: { 
                    x: { display: false },
                    y: { type: 'linear', display: true, position: 'left', title: { display: true, text: 'Market Size ($B)' }, ticks: { callback: function(value) { return '$' + value + 'B'; } } }
                },
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true, boxWidth: 8, padding: 20 } },
                    tooltip: {
                    mode: 'index',
                    intersect: false,
                    callbacks: {
                        label: function(context) {
                        return context.dataset.label + ' : $' + context.parsed.y + 'B';
                        }
                    }
                    }
                }
            } });
        }
        
        if (ctxTrend) {
            destroyChart('trendChart');
            charts['trendChart'] = new Chart(ctxTrend.getContext('2d'), {
                type: 'bar',
                data: {
                  labels: ['AI Sustainable', 'AI Advisor', 'Premium/Luxury', 'Natural/Organic', 'Bond Repair', 'Hair Loss', 'Scalp Care'],
                  datasets: [{
                    label: 'CAGR Growth Rate (%)',
                    data: [22.9, 11.96, 9.4, 9.4, 9.3, 7.77, 6.5],
                    backgroundColor: ['#4338ca', '#7e22ce', '#be185d', '#059669', '#f59e0b', '#dc2626', '#2563eb'],
                    borderRadius: 6
                  }]
                },
                options: { indexAxis: 'y', responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
            });
        }
    }

    function initUSACharts() {
        const ctxGrowth = document.getElementById('usaGrowthChart');
        const ctxCat = document.getElementById('usCategoryGrowthChart');
        const ctxPlat = document.getElementById('usaPlatformChartV6');
        const ctxEmerging = document.getElementById('emergingIngredientChart');
        const ctxAmazon = document.getElementById('amazonTrendChart');
        const ctxSocial = document.getElementById('socialMediaAgeChart');

        if(ctxGrowth) {
             destroyChart('usaGrowthChart');
             const years = [2024, 2025, 2026, 2027, 2028, 2029, 2030];
             const usaData = Array.from({length:7}, (_,i) => (18.21 * Math.pow(1.058, i)).toFixed(2));
             charts['usaGrowthChart'] = new Chart(ctxGrowth.getContext('2d'), { type: 'line', data: { labels: years, datasets: [{ label: 'USA Market', data: usaData, borderColor: '#2563eb', fill: true, backgroundColor: 'rgba(37,99,235,0.1)' }] }, options: { responsive: true, maintainAspectRatio: false, scales: { x: { display: false }, y: { ticks: { callback: function(value) { return '$' + value + 'B'; } } } }, plugins: { tooltip: { callbacks: { label: function(context) { return 'Market Size: $' + context.parsed.y + 'B'; } } } } } });
        }

        if(ctxCat) {
             destroyChart('usCategoryGrowthChart');
             const years = [2024, 2025, 2026, 2027, 2028, 2029, 2030];
             const gen = (b, r) => Array.from({length:7}, (_,i) => (b * Math.pow(1+r/100, i)).toFixed(2));
             
             const dataShampoo = gen(11.0, 3.5);
             const dataConditioner = gen(7.0, 4.2);
             const dataTonic = gen(2.5, 6.5);
             // Adjusted Serum to 7.07% (Straits)
             const dataSerum = gen(1.5, 7.07);
             // Adjusted Scrub to 10.2% (FMI)
             const dataScrub = gen(0.8, 10.2);

             charts['usCategoryGrowthChart'] = new Chart(ctxCat.getContext('2d'), { type: 'line', data: { labels: years, datasets: [
                { label: 'Shampoo (3.5%)', data: dataShampoo, borderColor: '#64748b', borderWidth: 2, tension: 0.4, pointRadius: 3, pointHoverRadius: 6, pointBackgroundColor: '#fff' },
                { label: 'Conditioner (4.2%)', data: dataConditioner, borderColor: '#3b82f6', borderWidth: 2, tension: 0.4, pointRadius: 3, pointHoverRadius: 6, pointBackgroundColor: '#fff' },
                { label: 'Hair Tonic (6.5%)', data: dataTonic, borderColor: '#f59e0b', borderWidth: 3, tension: 0.4, pointRadius: 4, pointHoverRadius: 6, pointBackgroundColor: '#fff' },
                { label: 'Hair Serum (7.1%)', data: dataSerum, borderColor: '#7e22ce', borderWidth: 3, tension: 0.4, pointRadius: 4, pointHoverRadius: 7, pointBackgroundColor: '#fff' },
                { label: 'Scalp Scrub (10.2%)', data: dataScrub, borderColor: '#10b981', borderWidth: 3, tension: 0.4, pointRadius: 4, pointHoverRadius: 7, pointBackgroundColor: '#fff' }
             ]}, options: { responsive: true, maintainAspectRatio: false, 
                 plugins: { legend: { position: 'bottom', labels: { usePointStyle: true, boxWidth: 8, padding: 20 } }, tooltip: { mode: 'index', intersect: false } },
                 scales: { y: { display: true, grid: { color: '#f1f5f9' }, title: { display: true, text: 'Market Size ($B)' } }, x: { grid: { display: false } } }
             } });
        }

        if(ctxPlat) {
             destroyChart('usaPlatformChartV6');
             charts['usaPlatformChartV6'] = new Chart(ctxPlat.getContext('2d'), { type: 'bar', data: { labels: ['Amazon', 'Walmart', 'Sephora', 'TikTok'], datasets: [
                { label: '2024 (%)', data: [10, 8, 6, 0.2], backgroundColor: '#cbd5e1' }, { label: '2025 (%)', data: [14.5, 13, 10, 2], backgroundColor: ['#eab308', '#2563eb', '#1e293b', '#db2777'] }
             ]}, options: { responsive: true, maintainAspectRatio: false, scales: { x: { display: true } } } });
        }

        if(ctxEmerging) {
             destroyChart('emergingIngredientChart');
             charts['emergingIngredientChart'] = new Chart(ctxEmerging.getContext('2d'), { type: 'bar', data: { labels: ['Bergamot', 'Onion', 'Pumpkin Seed'], datasets: [{ label: 'Growth %', data: [366, 309, 186], backgroundColor: ['#7e22ce', '#f59e0b', '#10b981'] }] }, options: { indexAxis: 'y', responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } } });
        }

        if(ctxAmazon) {
             destroyChart('amazonTrendChart');
             charts['amazonTrendChart'] = new Chart(ctxAmazon.getContext('2d'), { type: 'bar', data: { labels: ['Oils', 'Regrowth', 'Shampoo', 'Scalp', 'Masks', 'Serums'], datasets: [{ data: [9.7, 4.78, 2.59, 1.2, 0.69, 0.34], backgroundColor: ['#3b82f6','#f59e0b','#10b981','#6366f1','#94a3b8','#a855f7'] }] }, options: { indexAxis: 'y', responsive: true, maintainAspectRatio: false, scales: { x: { display: false }, y: { grid: { display: false } } } } });
        }

        if(ctxSocial) {
             destroyChart('socialMediaAgeChart');
             charts['socialMediaAgeChart'] = new Chart(ctxSocial.getContext('2d'), {
                type: 'bar',
                data: {
                  labels: ['18-29', '30-49', '50-64', '65+'],
                  datasets: [
                    { label: 'YouTube', data: [93, 94, 86, 65], backgroundColor: '#ef4444' },
                    { label: 'Facebook', data: [68, 78, 70, 59], backgroundColor: '#3b82f6' },
                    { label: 'Instagram', data: [80, 66, 36, 19], backgroundColor: '#db2777' },
                    { label: 'TikTok', data: [59, 25, 10, 5], backgroundColor: '#1e293b' }
                  ]
                },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'bottom' } } }
             });
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        initGlobalCharts();
    });
  </script>
